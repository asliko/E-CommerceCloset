<div class="row products_row">

    <!-- Product -->
    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-md-6">
            <div class="product">
                <div class="product_image"><img src="~/Content/productPhoto/@item.Image2" alt="" width="350" height="390"></div>
                <div class="product_content">
                    <div class="product_info d-flex flex-row align-items-start justify-content-start">
                        <div>
                            <div>
                                <div class="product_name"><a href="product.html"> @Html.DisplayFor(modelItem => item.Name)</a></div>
                                <div class="product_category">In <a href="category.html">@Html.DisplayFor(modelItem => item.CategoryName)</a></div>
